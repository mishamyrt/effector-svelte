{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "resolveJsonModule": true,
      "baseUrl": ".",
      "allowJs": true,
      "checkJs": true,
      "strictNullChecks": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
      "outDir": "dist"
    },
    "include": [
      "playground/**/*.ts",
      "playground/**/*.svelte",
      "src/**/*.d.ts",
      "src/**/*.ts",
      "src/**/*.js",
      "src/**/*.svelte",
      "vite.config.ts",
      "svelte.config.js",
      ".eslintrc.cjs",
    ],
    "references": [
      {
        "path": "./tsconfig.node.json"
      }
    ]
  }